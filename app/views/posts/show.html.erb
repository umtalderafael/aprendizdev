  <div class="container mt-5 mb-5">
    <div class="row">
      <div class="col-lg-12">

		<div class="card">
		  <div class="card-body">

			<nav aria-label="breadcrumb">
			  <ol class="breadcrumb">
			    <li class="breadcrumb-item">
			    	<a href="/classrooms">Salas de aula</a>
			    </li>
			    <li class="breadcrumb-item">
			    	<a href="/classrooms/<%= @post.classrooms.collect(&:id)[0] %>"><%= @post.classrooms.collect(&:nome)[0] %></a>
			    </li>
			    <li class="breadcrumb-item active" aria-current="page"><%= @post.nome %></li>
			  </ol>
			</nav>
		  	
	        <h3 class="mt-4"><%= @post.nome %></h3>

	        <p class="lead">
	          <i class="far fa-user"></i> Por <b> <%= User.find(@post.user_id).nome %> </b>
	        </p>

	        <hr>

	        <p> 
	        	<i class="fas fa-calendar-day"></i> Postado em <%= @post.created_at.strftime("%d/%m/%Y") %>
	        </p>
	       
	        <hr>

	        <p class="lead"><%= sanitize @post.texto %></p>
	  
	        <% if @post.anexos.attached? %>

				<ul class="list-group">			  
				  <li class="list-group-item">
				  	<strong>
				  		<i class="fas fa-paperclip"></i> Anexos
				  	</strong>
				  </li>
				  <% @post.anexos.each do |file| %>
				    <li class="list-group-item">
				    	<a href="<%= url_for(file) %>" title="<%= file.blob.filename %>">
				    		<i class="fas fa-file"></i> <%= file.blob.filename %>
				    	</a>		      
				    </li>
				  <% end %>
				</ul>

			<% end %>
	 
	        <div class="card my-4">
	          <h5 class="card-header">Deixa uma mensagem:</h5>
	          <div class="card-body">
	            <form>
	              <div class="form-group">
	                <textarea class="form-control" rows="3"></textarea>
	              </div>
	              <button type="submit" class="btn btn-primary">Enviar</button>
	            </form>
	          </div>
	        </div>

	        <div class="media mb-4">
	          <img class="d-flex mr-3 rounded-circle" src="http://placehold.it/50x50" alt="">
