
<div class="main-w3layouts wrapper">

	<%=   %>

	<h1 style="font-size: 25px; font-weight: bold;"> CADASTRAR </h1>

	<div class="main-agileinfo">
		<div class="agileits-top">
			<%= form_for @user do |f| %>

				<%= f.text_field :nome , placeholder: "Digite seu nome", class: 'input-sign text', :required => true %>

				<%= f.text_field :username , placeholder: "Digite o e-mail", class: 'input-sign text', :required => true %>

				<%= f.password_field :password , placeholder: "Digite a senha", class: 'input-sign text', :required => true %>

				<%= f.number_field :idade , placeholder: "Informe a idade", class: 'input-sign text', :required => true %>

			    <%= f.radio_button :tipo, "Desenvolvedor", :checked => true %>
			    <%= f.label :tipo, "Desenvolvedor", :value => "Desenvolvedor", class: "label-sign"  %> <br>

			    <%= f.radio_button :tipo, "Aprendiz" %> 				    
			    <%= f.label :tipo, "Aprendiz", :value => "Aprendiz", class: "label-sign" %> <br><br>
				
				<div class="wthree-text">
					<label class="anim">
						<input type="checkbox" class="checkbox" required="">
						<span>Eu aceito os termos e condições</span>
					</label>
					<div class="clear"> </div>
				</div>

				<%= f.submit "ENVIAR", class: "btn-sign" %>
				
			<%end%>

			<p>
				Já tem uma conta? <br> <a href="/login"> Clique aqui para entrar</a>
			</p>

		</div>
	</div>

