<%= form_with(model: language) do |form| %>
  
  <% if language.errors.any? %>
    <div id="error_explanation">
      
      <% language.errors.full_messages.each do |message| %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <strong> <%= message %> </strong>  
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
      <% end %>
 
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :nome %>
    <%= form.text_field :nome, class: "form-control input-nome" %>
  </div>

  <div class="form-group">
     <label> Carreira </label><br>
    <%= collection_select(:language, :career_id, Career.all, :id, :nome, {:prompt => 'Selecione uma carreira'}, { class: "form-control input-carreira" }) %>
  </div>

  <div class="actions">
    <%= form.submit "Salvar", class: "btn btn-primary" %>
  </div>
<% end %>
