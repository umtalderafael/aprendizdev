<div class="container mt-5">

  <% if notice %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <strong> <%= notice %> </strong>  
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
  <% end %>

  <h1>
    Linguagens
    <div class="float-right">
      <%= link_to 'Nova Linguagem', new_language_path, class: "btn btn-primary"%>
    </div>
  </h1>
  <br>

  <table class="table table-condensed table-border table-hover">
    <thead>
      <tr>
        <th>Nome</th>
        <th>Carreira</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @languages.each do |language| %>
        <tr>
          <td><%= language.nome %></td>
          <td><%= language.career.nome %></td>
          <td><%= link_to 'Ver', language %></td>
          <td><%= link_to 'Editar', edit_language_path(language) %></td>
          <td>
            <%= button_to "Remover", language, method: :delete, class: "btn btn-danger btn-sm", data: {title: "AtenÃ§Ã£o!", confirm: 'Tem certeza que deseja apagar?', commit: 'Apagar', cancel: "Cancelar"}   %>  
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>
