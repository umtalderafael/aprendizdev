<div class="container" style="margin-top: 50px;">

    <h1>Usuários</h1>

    <% if flash[:notice] %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>
                <%= flash[:notice] %>
            </strong>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>      
    <%end%>

    <table class="table table-condensed table-hover">   
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Idade</th>
                <th>E-mail</th>       
                <th>Localização</th>       
                <th>Tipo</th>
                <th></th>
            </tr>
        </thead>
        <tbody>     
            <% @users.each do |usuario| %>
            <tr>
                <td>
                    <%= usuario.id %>
                </td>
                <td>
                    <%= usuario.nome %>
                </td>
                <td>    
                    <%= usuario.idade %>
                </td>
                <td>    
                    <%= usuario.username %>
                </td> 
                <td>    
                    <% if usuario.location %>
                        <%= usuario.location.cidade %> - <%= usuario.location.estado %>
                    <% else %>
                        Não informado
                    <% end %>
                </td>                 
                <td>    
                    <%= usuario.tipo %>
                </td>
                <td>
                    <%= button_to "Remover", usuario, method: :delete, class: "btn btn-danger btn-sm", data: {title: "Atenção!", confirm: 'Tem certeza que deseja apagar?', commit: 'Apagar', cancel: "Cancelar"}   %>  
                </td>
            </tr>
            <% end %>
        </tbody>
    </table>
  
    
</div> 