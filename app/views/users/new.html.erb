<div class="main-w3layouts wrapper">

	<h1 style="font-size: 25px; font-weight: bold;"> CADASTRAR </h1>

	<div class="main-agileinfo">
		<div class="agileits-top">
			<%= form_for @user do |f| %>

				<div class="form-group">
					<%= f.text_field :nome , placeholder: "Digite seu nome", class: 'form-control', :required => true %>
				</div>

				<div class="form-group">
					<%= f.email_field :username , placeholder: "Digite seu e-mail", class: 'form-control', :required => true %>
				</div>

				<div class="form-group">
					<%= f.password_field :password , placeholder: "Digite a senha", class: 'form-control', :required => true %>
				</div>

				<label style="color: white;">Data de nascimento</label> <br>
				<%= f.date_field(:nascimento, class: "date form-control", type: "Date") %> <br>

				<label style="color: white;">Nível de conhecimento</label> <br>

			    <%= f.radio_button :tipo, "Desenvolvedor", :checked => true %>
			    <%= f.label :tipo, "Desenvolvedor", :value => "Desenvolvedor", class: "label-sign"  %>  &nbsp;

			    <%= f.radio_button :tipo, "Aprendiz" %> 				    
			    <%= f.label :tipo, "Aprendiz", :value => "Aprendiz", class: "label-sign" %> <br><br>
				
			  	<div class="form-group">
			    	<label style="color: white;">Imagem do perfil</label>
			    	<%= f.file_field :avatar, class: "form-control-file"  %>
			  	</div>
			  	<br>

				<div class="wthree-text">
					<label class="anim">
						<input type="checkbox" class="checkbox" required="">
						<span>Eu aceito os termos e condições</span>
					</label>
					<div class="clear"> </div>
				</div>

				<%= f.submit "ENVIAR", class: "btn-sign" %>
				
			<%end%>

			<p>
				Já tem uma conta? <br> <a href="/login"> Clique aqui para entrar</a>
			</p>

		</div>
	</div>

	<ul class="colorlib-bubbles">
		<li></li>
		<li></li>
		<li></li>
		<li></li>
		<li></li>
		<li></li>
		<li></li>
		<li></li>
		<li></li>
		<li></li>
	</ul>
</div>

