<div class="container mt-5">

  <% if notice %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <strong> <%= notice %> </strong>  
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
  <% end %>

  <h1>
    Carreiras
    <div class= "float-right">
      <%= link_to 'Nova carreira', new_career_path, class: "btn btn-primary" %>
    </div>
  </h1>

  <table class="table table-condensed table-border table-hover">
    <thead>
      <tr>
        <th>Nome</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @careers.each do |career| %>
        <tr>
          <td><%= career.nome %></td>
          <td><%= link_to 'Ver', career %></td>
          <td><%= link_to 'Editar', edit_career_path(career) %></td>

          <td>
            <%= button_to "Remover", career, method: :delete, class: "btn btn-danger btn-sm", data: {title: "AtenÃ§Ã£o!", confirm: 'Tem certeza que deseja apagar?', commit: 'Apagar', cancel: "Cancelar"}   %>  
          </td>

        </tr>
      <% end %>
    </tbody>
  </table>

</div>
